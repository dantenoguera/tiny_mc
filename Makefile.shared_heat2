CU=nvcc
CUFLAGS=-O2 -Xcompiler=-Wall -Xcompiler=-Wextra
LDFLAGS=

TARGETS=tiny_mc_shared_heat2

all: $(TARGETS)

tiny_mc_shared_heat2: tiny_mc_shared_heat2.o
	$(CU) $(CUFLAGS) -o $@ $^ $(LDFLAGS)

# CU, CUFLAGS no tienen regla implicita como CC/CFLAGS
%.o: %.cu
	$(CU) $(CUFLAGS) -o $@ -c $<

.PHONY: clean

clean:
	rm -f *.o $(TARGETS)
